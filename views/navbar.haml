.contain-to-grid.fixed
	%nav.top-bar
		%ul.title-area	
			%li.name
				%h1
					%a{:href => '/'}
						How far!
			%li.toggle-topbar.menu-icon
				%a{:href => '#'}
					%span Menu

		%section.top-bar-section
			%ul.left
				%li
					%a{:href => '/play'} Play
				%li
					%a{:href => '/leader_board'} Leader Board

			- if @user
				%ul.right
					%li.divider.hide-for-small
					%li.has-dropdown
						%a{:href => '#'}
							%img{:src => @user['profile_image'], :style => 'height:32px;'}
							="#{@user['name']}"

						%ul.dropdown
							%li
								%a{:href => '/logout'} Log Out	